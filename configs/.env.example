# AMS Chat Web - Environment Configuration
# Copy this file to .env and fill in your values

# Server
PORT=3000
NODE_ENV=production

# Test Mode (set to 'true' for testing)
TEST_MODE=false
TEST_DB=database/amschat_test.db

# Admin Access (comma-separated IPs)
ADMIN_ALLOWED_IPS=127.0.0.1,::1

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Stripe Payment Keys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Database (optional, defaults to database/amschat.db)
# DB_FILE=database/amschat.db
