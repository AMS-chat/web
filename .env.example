# Database Configuration
DATABASE_URL=postgresql://kcychat_user:your_secure_password_here@localhost:5432/kcychat

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Security
SESSION_SECRET=your_random_session_secret_here_min_32_chars
JWT_SECRET=your_random_jwt_secret_here_min_32_chars

# CORS (за production сложи конкретния домейн)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
